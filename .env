# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=webmatcha
DB_USER=webmatcha_user
DB_PASSWORD=webmatcha_password
CONNECTION_STRING=Host=localhost;Port=5432;Database=postgres;Username=postgres;Password=q

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=WebMatcha
JWT_AUDIENCE=WebMatcha.Users
JWT_EXPIRY_MINUTES=1440

# Email Configuration (MailKit)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@webmatcha.com
SMTP_FROM_NAME=WebMatcha

# Application Configuration
APP_BASE_URL=https://localhost:7036
APP_NAME=WebMatcha
APP_ENVIRONMENT=Development

# File Upload Configuration
UPLOAD_PATH=wwwroot/uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif

# Security
BCRYPT_WORK_FACTOR=12

# Redis (for caching and real-time features)
REDIS_CONNECTION_STRING=localhost:6379

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=Information