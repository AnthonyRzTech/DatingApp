@using WebMatcha.Services
@inject ServerSessionService SessionService
@inject NavigationManager Navigation

@if (!isLoaded)
{
    <div class="container py-5">
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
}
else if (isAuthenticated)
{
    @ChildContent
}
else
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-lock display-1 text-muted mb-3"></i>
                        <h3>Authentication Required</h3>
                        <p class="text-muted">You must be logged in to access this page.</p>
                        <div class="d-grid gap-2">
                            <a href="/login" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                            <a href="/register" class="btn btn-outline-primary">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; } = null!;

    private bool isAuthenticated = false;
    private bool isLoaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isAuthenticated = await SessionService.IsAuthenticatedAsync();
            isLoaded = true;

            if (!isAuthenticated)
            {
                Navigation.NavigateTo("/login");
            }

            StateHasChanged();
        }
    }
}