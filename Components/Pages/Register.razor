@page "/register"
@using WebMatcha.Services
@using WebMatcha.Models
@inject CompleteAuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Register - WebMatcha</PageTitle>

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="text-primary fw-bold">
                            <i class="bi bi-heart-fill text-danger me-2"></i>
                            Join WebMatcha
                        </h2>
                        <p class="text-muted">Create your dating profile</p>
                    </div>

                    @if (isSuccess)
                    {
                        <div class="alert alert-success text-center">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <h5>Registration Successful!</h5>
                            <p>Please check your email to verify your account before logging in.</p>
                            <a href="/login" class="btn btn-primary">Go to Login</a>
                        </div>
                    }
                    else
                    {
                        @if (errorMessages.Any())
                        {
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    @foreach (var error in errorMessages)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            </div>
                        }

                        <form @onsubmit="HandleRegister" @onsubmit:preventDefault="true">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">First Name <span class="text-danger">*</span></label>
                                    <input type="text" @bind="registerRequest.FirstName" class="form-control" 
                                           placeholder="Your first name" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                    <input type="text" @bind="registerRequest.LastName" class="form-control" 
                                           placeholder="Your last name" required />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Username <span class="text-danger">*</span></label>
                                <input type="text" @bind="registerRequest.Username" class="form-control" 
                                       placeholder="Choose a username" required />
                                <small class="text-muted">Letters, numbers, and underscores only</small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email" @bind="registerRequest.Email" class="form-control" 
                                       placeholder="your@email.com" required />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Password <span class="text-danger">*</span></label>
                                    <input type="password" @bind="registerRequest.Password" class="form-control" 
                                           placeholder="Create a strong password" required />
                                    <small class="text-muted">At least 6 chars with uppercase, lowercase, and number</small>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                    <input type="password" @bind="registerRequest.ConfirmPassword" class="form-control" 
                                           placeholder="Confirm your password" required />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Birth Date <span class="text-danger">*</span></label>
                                <input type="date" @bind="registerRequest.BirthDate" class="form-control" 
                                       max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" required />
                                <small class="text-muted">You must be at least 18 years old</small>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Gender <span class="text-danger">*</span></label>
                                    <select @bind="registerRequest.Gender" class="form-select" required>
                                        <option value="">Select gender</option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Interested In <span class="text-danger">*</span></label>
                                    <select @bind="registerRequest.SexualPreference" class="form-select" required>
                                        <option value="">Select preference</option>
                                        <option value="male">Men</option>
                                        <option value="female">Women</option>
                                        <option value="both">Both</option>
                                    </select>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Creating Account...</span>
                                    }
                                    else
                                    {
                                        <span><i class="bi bi-person-plus me-2"></i>Create Account</span>
                                    }
                                </button>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0">
                                Already have an account? 
                                <a href="/login" class="text-primary text-decoration-none fw-bold">Sign In</a>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterRequest registerRequest = new();
    private List<string> errorMessages = new();
    private bool isSubmitting = false;
    private bool isSuccess = false;

    private async Task HandleRegister()
    {
        if (isSubmitting) return;
        
        isSubmitting = true;
        errorMessages.Clear();
        StateHasChanged();
        
        try
        {
            var result = await AuthService.RegisterAsync(registerRequest);
            
            if (result.Success)
            {
                isSuccess = true;
            }
            else
            {
                errorMessages = result.Errors;
            }
        }
        catch (Exception ex)
        {
            errorMessages.Add("An error occurred during registration. Please try again.");
            Console.WriteLine($"Registration error: {ex}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }
}