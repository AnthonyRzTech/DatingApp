@page "/verify-email"
@using WebMatcha.Services
@inject CompleteAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Verify Email - WebMatcha</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center p-5">
                    @if (isLoading)
                    {
                        <div class="spinner-border text-primary mb-3" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <h4>Verifying your email...</h4>
                    }
                    else if (isSuccess)
                    {
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        <h3 class="mt-3 text-success">Email Verified!</h3>
                        <p>Your email has been successfully verified. You can now log in to your account.</p>
                        <a href="/login" class="btn btn-primary">Go to Login</a>
                    }
                    else
                    {
                        <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
                        <h3 class="mt-3 text-danger">Verification Failed</h3>
                        <p>@errorMessage</p>
                        <a href="/register" class="btn btn-primary">Register Again</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string Token { get; set; } = "";
    
    private bool isLoading = true;
    private bool isSuccess = false;
    private string errorMessage = "Invalid or expired verification link.";
    
    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(Token))
        {
            isLoading = false;
            errorMessage = "No verification token provided.";
            return;
        }
        
        try
        {
            isSuccess = await AuthService.VerifyEmailAsync(Token);
            if (!isSuccess)
            {
                errorMessage = "This verification link is invalid or has expired.";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Verification error: {ex}");
            errorMessage = "An error occurred during verification. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }
}