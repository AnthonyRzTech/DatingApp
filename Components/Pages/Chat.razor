@page "/chat"
@using WebMatcha.Services
@using WebMatcha.Models
@using Microsoft.AspNetCore.SignalR.Client
@using WebMatcha.Components.Shared
@inject MatchingService MatchingService
@inject MessageService MessageService
@inject UserService UserService
@inject ServerSessionService SessionService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Chat - WebMatcha</PageTitle>

<AuthRequired>
<div class="container-fluid h-100">
    <div class="row h-100">
        <!-- Conversations List -->
        <div class="col-md-4 col-lg-3 border-end p-0">
            <div class="p-3 border-bottom bg-light">
                <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Messages</h5>
            </div>
            
            <div class="conversations-list">
                @if (!conversations.Any())
                {
                    <div class="text-center p-4 text-muted">
                        <i class="bi bi-chat-slash display-1"></i>
                        <p class="mt-3">No conversations yet</p>
                        <small>Match with someone to start chatting!</small>
                    </div>
                }
                else
                {
                    @foreach (var conv in conversations)
                    {
                        <div class="conversation-item @(selectedUserId == conv.OtherUserId ? "active" : "")" 
                             @onclick="() => SelectConversation(conv.OtherUserId)">
                            <div class="d-flex align-items-center p-3">
                                <div class="position-relative me-3">
                                    <img src="@conv.OtherUserPhoto" class="rounded-circle" 
                                         style="width: 50px; height: 50px; object-fit: cover;">
                                    @if (conv.IsOnline)
                                    {
                                        <span class="position-absolute bottom-0 end-0 badge rounded-pill bg-success" 
                                              style="width: 12px; height: 12px; padding: 0;"></span>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-0">@conv.OtherUserName</h6>
                                    <small class="text-muted text-truncate d-block">@conv.LastMessage</small>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">@FormatTime(conv.LastMessageTime)</small>
                                    @if (conv.UnreadCount > 0)
                                    {
                                        <span class="badge bg-danger rounded-pill">@conv.UnreadCount</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        
        <!-- Chat Area -->
        <div class="col-md-8 col-lg-9 p-0 d-flex flex-column">
            @if (selectedUserId == 0)
            {
                <div class="flex-grow-1 d-flex align-items-center justify-content-center text-muted">
                    <div class="text-center">
                        <i class="bi bi-chat-text display-1"></i>
                        <p class="mt-3">Select a conversation to start messaging</p>
                    </div>
                </div>
            }
            else if (selectedUser != null)
            {
                <!-- Chat Header -->
                <div class="chat-header border-bottom p-3 bg-light">
                    <div class="d-flex align-items-center">
                        <img src="@selectedUser.ProfilePhotoUrl" class="rounded-circle me-3" 
                             style="width: 40px; height: 40px; object-fit: cover;">
                        <div class="flex-grow-1">
                            <h6 class="mb-0">@selectedUser.FirstName @selectedUser.LastName</h6>
                            <small class="text-muted">
                                @if (typingUsers.ContainsKey(selectedUserId) && typingUsers[selectedUserId])
                                {
                                    <span class="text-primary"><i class="bi bi-three-dots"></i> Typing...</span>
                                }
                                else if (selectedUser.IsOnline)
                                {
                                    <span class="text-success"><i class="bi bi-circle-fill"></i> Online</span>
                                }
                                else
                                {
                                    <span>Last seen @FormatLastSeen(selectedUser.LastSeen)</span>
                                }
                            </small>
                        </div>
                        <button class="btn btn-outline-primary btn-sm" 
                                @onclick='() => Navigation.NavigateTo($"/profile/{selectedUserId}")'>
                            <i class="bi bi-person"></i> View Profile
                        </button>
                    </div>
                </div>
                
                <!-- Messages Area -->
                <div class="flex-grow-1 overflow-auto p-3" @ref="messagesContainer">
                    @{
                        DateTime? lastMessageDate = null;
                    }
                    @foreach (var msg in messages)
                    {
                        // Show date separator if message is on a different day
                        @if (lastMessageDate == null || msg.SentAt.Date != lastMessageDate.Value.Date)
                        {
                            <div class="text-center my-3">
                                <small class="badge bg-light text-muted">@FormatDateSeparator(msg.SentAt)</small>
                            </div>
                            lastMessageDate = msg.SentAt;
                        }
                        
                        <div class="message-item @(msg.SenderId == currentUserId ? "sent" : "received") mb-3">
                            <div class="message-bubble">
                                <p class="mb-1">@msg.Content</p>
                                <small class="text-muted">@msg.SentAt.ToString("HH:mm")</small>
                                @if (msg.SenderId == currentUserId)
                                {
                                    @if (msg.IsRead)
                                    {
                                        <i class="bi bi-check2-all text-primary ms-1" title="Read"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check2 text-muted ms-1" title="Delivered"></i>
                                    }
                                }
                            </div>
                        </div>
                    }
                    
                    @if (messages.Any() && !messages.Any(m => m.SenderId != currentUserId && !m.IsRead))
                    {
                        <div class="text-center mt-2">
                            <small class="text-muted fst-italic">All messages read</small>
                        </div>
                    }
                </div>
                
                <!-- Message Input -->
                <div class="border-top p-3">
                    @if (typingUsers.ContainsKey(selectedUserId) && typingUsers[selectedUserId])
                    {
                        <div class="typing-indicator mb-2">
                            <small class="text-muted"><i class="bi bi-three-dots"></i> @selectedUser.FirstName is typing...</small>
                        </div>
                    }
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Type a message..." 
                               @bind="newMessage"
                               @oninput="OnTyping"
                               @onkeypress="@(async (e) => { if (e.Key == "Enter" && !e.ShiftKey) await SendMessage(); })">
                        <button class="btn btn-primary" @onclick="SendMessage" disabled="@string.IsNullOrWhiteSpace(newMessage)">
                            <i class="bi bi-send"></i> Send
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .conversations-list {
        height: calc(100vh - 200px);
        overflow-y: auto;
    }
    
    .conversation-item {
        cursor: pointer;
        border-bottom: 1px solid #f0f0f0;
        transition: background-color 0.2s;
    }
    
    .conversation-item:hover {
        background-color: #f8f9fa;
    }
    
    .conversation-item.active {
        background-color: #e3f2fd;
    }
    
    .message-item {
        display: flex;
    }
    
    .message-item.sent {
        justify-content: flex-end;
    }
    
    .message-item.received {
        justify-content: flex-start;
    }
    
    .message-bubble {
        max-width: 70%;
        padding: 10px 15px;
        border-radius: 18px;
        word-wrap: break-word;
    }
    
    .message-item.sent .message-bubble {
        background-color: #007bff;
        color: white;
    }
    
    .message-item.sent .message-bubble .text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }
    
    .message-item.received .message-bubble {
        background-color: #f1f3f5;
        color: #333;
    }
    
    .chat-header {
        height: 70px;
    }
    
    .typing-indicator {
        animation: fadeIn 0.3s ease-in;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    
    .bi-circle-fill {
        font-size: 0.5rem;
    }
    
    .badge.bg-light {
        font-weight: normal;
        padding: 0.25rem 0.75rem;
        border: 1px solid #dee2e6;
    }
</style>

@code {
    private HubConnection? hubConnection;
    private List<ConversationSummary> conversations = new();
    private List<Message> messages = new();
    private User? selectedUser;
    private int selectedUserId;
    private string newMessage = "";
    private int currentUserId = 1; // Temporary - will be from auth
    private ElementReference messagesContainer;
    private Dictionary<int, bool> typingUsers = new();
    private CancellationTokenSource? typingCancellationTokenSource;
    private bool isTyping = false;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadConversations();
        await SetupSignalR();
    }
    
    private async Task SetupSignalR()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri($"/hubs/chat?userId={currentUserId}"))
            .Build();
        
        hubConnection.On<dynamic>("ReceiveMessage", async (message) =>
        {
            if (selectedUserId == (int)message.senderId)
            {
                messages.Add(new Message
                {
                    Id = message.id,
                    SenderId = message.senderId,
                    Content = message.content,
                    SentAt = message.sentAt,
                    IsRead = false
                });
                
                await InvokeAsync(StateHasChanged);
                await ScrollToBottom();
                await MarkMessagesAsRead();
            }
            
            await LoadConversations();
            await InvokeAsync(StateHasChanged);
        });
        
        hubConnection.On<dynamic>("MessageSent", async (message) =>
        {
            await LoadConversations();
            await InvokeAsync(StateHasChanged);
        });
        
        hubConnection.On<int>("MessagesRead", (userId) =>
        {
            if (selectedUserId == userId)
            {
                foreach (var msg in messages.Where(m => m.SenderId == currentUserId))
                {
                    msg.IsRead = true;
                }
                InvokeAsync(StateHasChanged);
            }
        });
        
        hubConnection.On<dynamic>("UserTyping", (data) =>
        {
            var userId = (int)data.userId;
            var isTyping = (bool)data.isTyping;
            
            if (isTyping)
            {
                typingUsers[userId] = true;
            }
            else
            {
                typingUsers.Remove(userId);
            }
            
            InvokeAsync(StateHasChanged);
        });
        
        hubConnection.On<dynamic>("UserStatusChanged", async (data) =>
        {
            var userId = (int)data.userId;
            var isOnline = (bool)data.isOnline;
            
            // Update conversation list
            var conv = conversations.FirstOrDefault(c => c.OtherUserId == userId);
            if (conv != null)
            {
                conv.IsOnline = isOnline;
            }
            
            // Update selected user if it's the same
            if (selectedUserId == userId && selectedUser != null)
            {
                selectedUser.IsOnline = isOnline;
                if (!isOnline)
                {
                    selectedUser.LastSeen = DateTime.UtcNow;
                }
            }
            
            await InvokeAsync(StateHasChanged);
        });
        
        await hubConnection.StartAsync();
        await hubConnection.SendAsync("JoinChat", currentUserId);
    }
    
    private async Task LoadConversations()
    {
        // Get all matches first
        var matches = await MatchingService.GetUserMatchesAsync(currentUserId);
        
        // Get conversations with messages
        conversations = await MessageService.GetConversationsAsync(currentUserId);
        
        // Add matches without messages yet
        foreach (var match in matches)
        {
            if (!conversations.Any(c => c.OtherUserId == match.Id))
            {
                conversations.Add(new ConversationSummary
                {
                    OtherUserId = match.Id,
                    OtherUserName = $"{match.FirstName} {match.LastName}",
                    OtherUserPhoto = match.ProfilePhotoUrl,
                    LastMessage = "Start a conversation!",
                    LastMessageTime = DateTime.UtcNow,
                    UnreadCount = 0,
                    IsOnline = match.IsOnline
                });
            }
        }
        
        conversations = conversations.OrderByDescending(c => c.LastMessageTime).ToList();
    }
    
    private async Task SelectConversation(int userId)
    {
        selectedUserId = userId;
        selectedUser = await UserService.GetUserByIdAsync(userId);
        
        if (selectedUser != null)
        {
            messages = await MessageService.GetRecentMessagesAsync(currentUserId, userId);
            await MarkMessagesAsRead();
            await ScrollToBottom();
        }
    }
    
    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(newMessage) || selectedUserId == 0 || hubConnection == null)
            return;
        
        // Stop typing indicator
        if (isTyping)
        {
            isTyping = false;
            await hubConnection.SendAsync("SendTypingIndicator", currentUserId, selectedUserId, false);
        }
        typingCancellationTokenSource?.Cancel();
        
        var messageText = newMessage.Trim();
        newMessage = "";
        
        await hubConnection.SendAsync("SendMessage", currentUserId, selectedUserId, messageText);
        
        // Add message to local list immediately
        messages.Add(new Message
        {
            SenderId = currentUserId,
            ReceiverId = selectedUserId,
            Content = messageText,
            SentAt = DateTime.UtcNow,
            IsRead = false
        });
        
        // Update conversation list
        var conv = conversations.FirstOrDefault(c => c.OtherUserId == selectedUserId);
        if (conv != null)
        {
            conv.LastMessage = messageText;
            conv.LastMessageTime = DateTime.UtcNow;
            
            // Move conversation to top
            conversations.Remove(conv);
            conversations.Insert(0, conv);
        }
        
        await ScrollToBottom();
    }
    
    private async Task MarkMessagesAsRead()
    {
        if (selectedUserId > 0 && hubConnection != null)
        {
            await MessageService.MarkMessagesAsReadAsync(currentUserId, selectedUserId);
            await hubConnection.SendAsync("MarkMessagesAsRead", currentUserId, selectedUserId);
            
            // Update local conversation
            var conv = conversations.FirstOrDefault(c => c.OtherUserId == selectedUserId);
            if (conv != null)
            {
                conv.UnreadCount = 0;
            }
        }
    }
    
    private async Task ScrollToBottom()
    {
        await JSRuntime.InvokeVoidAsync("eval", 
            "document.querySelector('.overflow-auto').scrollTop = document.querySelector('.overflow-auto').scrollHeight");
    }
    
    private string FormatTime(DateTime time)
    {
        var diff = DateTime.UtcNow - time;
        if (diff.TotalMinutes < 1) return "Now";
        if (diff.TotalHours < 1) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalDays < 1) return $"{(int)diff.TotalHours}h ago";
        if (diff.TotalDays < 7) return $"{(int)diff.TotalDays}d ago";
        return time.ToString("MMM dd");
    }
    
    private string FormatMessageTime(DateTime time)
    {
        var today = DateTime.Today;
        var messageDate = time.Date;
        
        if (messageDate == today)
        {
            return time.ToString("HH:mm");
        }
        else if (messageDate == today.AddDays(-1))
        {
            return $"Yesterday {time:HH:mm}";
        }
        else if ((today - messageDate).TotalDays < 7)
        {
            return $"{time:ddd HH:mm}";
        }
        else
        {
            return time.ToString("MMM dd, HH:mm");
        }
    }
    
    private string FormatLastSeen(DateTime lastSeen)
    {
        var diff = DateTime.UtcNow - lastSeen;
        
        if (diff.TotalMinutes < 1) return "Last seen just now";
        if (diff.TotalMinutes < 60) return $"Last seen {(int)diff.TotalMinutes} minute{((int)diff.TotalMinutes != 1 ? "s" : "")} ago";
        if (diff.TotalHours < 24) return $"Last seen {(int)diff.TotalHours} hour{((int)diff.TotalHours != 1 ? "s" : "")} ago";
        if (diff.TotalDays < 7) return $"Last seen {(int)diff.TotalDays} day{((int)diff.TotalDays != 1 ? "s" : "")} ago";
        
        return $"Last seen {lastSeen:MMM dd}";
    }
    
    private string FormatDateSeparator(DateTime date)
    {
        var today = DateTime.Today;
        var messageDate = date.Date;
        
        if (messageDate == today)
        {
            return "Today";
        }
        else if (messageDate == today.AddDays(-1))
        {
            return "Yesterday";
        }
        else if ((today - messageDate).TotalDays < 7)
        {
            return date.ToString("dddd"); // Day name
        }
        else if (date.Year == today.Year)
        {
            return date.ToString("MMMM d");
        }
        else
        {
            return date.ToString("MMMM d, yyyy");
        }
    }
    
    private async Task OnTyping(ChangeEventArgs e)
    {
        if (selectedUserId == 0 || hubConnection == null) return;
        
        // Cancel previous typing indicator
        typingCancellationTokenSource?.Cancel();
        
        if (!isTyping && !string.IsNullOrWhiteSpace(e.Value?.ToString()))
        {
            isTyping = true;
            await hubConnection.SendAsync("SendTypingIndicator", currentUserId, selectedUserId, true);
        }
        
        // Set a timer to stop typing indicator after 3 seconds of inactivity
        typingCancellationTokenSource = new CancellationTokenSource();
        _ = Task.Delay(3000, typingCancellationTokenSource.Token).ContinueWith(async _ =>
        {
            if (!typingCancellationTokenSource.Token.IsCancellationRequested && isTyping)
            {
                isTyping = false;
                await hubConnection.SendAsync("SendTypingIndicator", currentUserId, selectedUserId, false);
            }
        }, TaskContinuationOptions.OnlyOnRanToCompletion);
    }
    
    public async ValueTask DisposeAsync()
    {
        typingCancellationTokenSource?.Cancel();
        
        if (hubConnection != null)
        {
            if (isTyping && selectedUserId > 0)
            {
                await hubConnection.SendAsync("SendTypingIndicator", currentUserId, selectedUserId, false);
            }
            
            await hubConnection.SendAsync("LeaveChat", currentUserId);
            await hubConnection.DisposeAsync();
        }
    }
}
</AuthRequired>