@page "/reset-password"
@using WebMatcha.Services
@inject CompleteAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Reset Password - WebMatcha</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4">Create New Password</h3>
                    
                    @if (isSuccess)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>
                            Your password has been reset successfully!
                        </div>
                        <div class="text-center">
                            <a href="/login" class="btn btn-primary">Go to Login</a>
                        </div>
                    }
                    else if (isInvalid)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-x-circle me-2"></i>
                            This password reset link is invalid or has expired.
                        </div>
                        <div class="text-center">
                            <a href="/forgot-password" class="btn btn-primary">Request New Link</a>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                @errorMessage
                            </div>
                        }
                        
                        <form @onsubmit="HandleSubmit" @onsubmit:preventDefault="true">
                            <div class="mb-3">
                                <label class="form-label">New Password</label>
                                <input type="password" @bind="password" class="form-control" required />
                                <small class="text-muted">At least 6 characters with uppercase, lowercase, and number</small>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">Confirm New Password</label>
                                <input type="password" @bind="confirmPassword" class="form-control" required />
                            </div>
                            
                            <button type="submit" class="btn btn-primary w-100" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Resetting...</span>
                                }
                                else
                                {
                                    <span>Reset Password</span>
                                }
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public string Token { get; set; } = "";
    
    private string password = "";
    private string confirmPassword = "";
    private string errorMessage = "";
    private bool isSubmitting = false;
    private bool isSuccess = false;
    private bool isInvalid = false;
    
    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Token))
        {
            isInvalid = true;
        }
    }
    
    private async Task HandleSubmit()
    {
        if (isSubmitting) return;
        
        errorMessage = "";
        
        // Validate passwords
        if (password.Length < 6)
        {
            errorMessage = "Password must be at least 6 characters";
            return;
        }
        
        if (!password.Any(char.IsUpper) || !password.Any(char.IsLower) || !password.Any(char.IsDigit))
        {
            errorMessage = "Password must contain uppercase, lowercase, and number";
            return;
        }
        
        if (password != confirmPassword)
        {
            errorMessage = "Passwords do not match";
            return;
        }
        
        isSubmitting = true;
        
        try
        {
            var result = await AuthService.ResetPasswordAsync(Token, password);
            if (result)
            {
                isSuccess = true;
            }
            else
            {
                isInvalid = true;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Password reset error: {ex}");
            errorMessage = "An error occurred. Please try again.";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}