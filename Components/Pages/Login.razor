@page "/login"
@rendermode InteractiveServer
@using WebMatcha.Services
@using WebMatcha.Models
@inject AuthService AuthService
@inject ServerSessionService ServerSession
@inject NavigationManager Navigation

<PageTitle>Login - WebMatcha</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="text-primary fw-bold">
                            <i class="bi bi-heart-fill text-danger me-2"></i>
                            Welcome Back
                        </h2>
                        <p class="text-muted">Sign in to your WebMatcha account</p>
                    </div>

                    <EditForm Model="loginRequest" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />
                        
                        @if (errorMessages.Any())
                        {
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    @foreach (var error in errorMessages)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            </div>
                        }

                        @if (successMessage != null)
                        {
                            <div class="alert alert-success">
                                @successMessage
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Username <span class="text-danger">*</span></label>
                            <InputText @bind-Value="loginRequest.Username" class="form-control form-control-lg" placeholder="Enter your username" />
                            <ValidationMessage For="@(() => loginRequest.Username)" class="text-danger" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Password <span class="text-danger">*</span></label>
                            <InputText @bind-Value="loginRequest.Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                            <ValidationMessage For="@(() => loginRequest.Password)" class="text-danger" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Signing In...</span>
                                }
                                else
                                {
                                    <span><i class="bi bi-box-arrow-in-right me-2"></i>Sign In</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-2">
                            <small class="text-muted">Forgot your password?</small>
                            <br>
                            <a href="#" class="text-primary text-decoration-none small">(Password reset coming soon)</a>
                        </p>
                        <p class="mb-0">
                            Don't have an account? 
                            <a href="/register" class="text-primary text-decoration-none fw-bold">Sign Up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new();
    
    private List<string> errorMessages = new();
    private string? successMessage;
    private bool isSubmitting = false;
    
    private async Task HandleLogin()
    {
        if (isSubmitting) return;
        
        isSubmitting = true;
        errorMessages.Clear();
        successMessage = null;
        
        AuthResult result = null;
        
        try
        {
            result = await AuthService.LoginAsync(loginRequest);
        }
        catch (Exception ex)
        {
            errorMessages.Clear();
            errorMessages.Add("An error occurred during login. Please try again.");
            Console.WriteLine($"Login error: {ex}");
            isSubmitting = false;
            return;
        }
        
        // Process result outside of try-catch
        if (result != null && result.Success && result.User != null)
        {
            // Set user session using server sessions
            ServerSession.SetCurrentUser(result.User);
            successMessage = "Login successful! Redirecting...";
            isSubmitting = false;
            StateHasChanged();
            
            // Navigate after a delay
            _ = Task.Run(async () =>
            {
                await Task.Delay(1500);
                await InvokeAsync(() => Navigation.NavigateTo("/", forceLoad: true));
            });
        }
        else if (result != null)
        {
            errorMessages = result.Errors;
            if (!errorMessages.Any())
            {
                errorMessages.Add("Invalid username or password.");
            }
            isSubmitting = false;
        }
    }
}