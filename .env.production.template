# WebMatcha Production Environment Template
# Copy this file to .env.production and update the values

# Database
POSTGRES_PASSWORD=your-secure-postgres-password
CONNECTION_STRING=Host=postgres;Database=webmatcha;Username=webmatcha_user;Password=your-secure-postgres-password;Pooling=true;MaxPoolSize=100

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production-must-be-at-least-32-characters
JWT_ISSUER=WebMatcha
JWT_AUDIENCE=WebMatcha.Users

# Redis
REDIS_CONNECTION=redis:6379

# Email Configuration (if using external SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=/app/wwwroot/uploads

# Security Headers
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com